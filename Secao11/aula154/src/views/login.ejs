<%- include('includes/head') %>
  <%- include('includes/nav.ejs') %>


    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="display-1 text-center">
            Criar conta ou Entrar
          </h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

          <%- include('includes/messages') %>

            <div class="row">
              <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda nã otem conta, preencha o formulário abaixo:</p>
                <form method="post" action="/login/register">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="mb-3">
                    <label class="form-label">Seu e-mail</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Sua Senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>

                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>
              <div class="col-lg">
                <h4>Faça seu login</h4>
                <p>Se você já tem conta, faça login abaixo:</p>
                <form method="post" action="/login/login">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="mb-3">
                    <label class="form-label">Seu e-mail</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Sua Senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>

                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>
            </div>

        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>


    <%- include('includes/footer') %>